{
  "$schema": "https://platformatic.dev/schemas/v1.53.3/db",
  "db": {
    "connectionString": "{PLT_ENTITY_DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "schemalock": true
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": "{PLT_ENTITY_APPLY_MIGRATIONS}"
  },
  "authorization": {
    "jwt": {
      "secret": "{PLT_SECRET}"
    },
    "roleKey": "role",
    "rules": [
      {
        "role": "platformatic-admin",
        "entity": "user",
        "find": true,
        "save": true
      }
    ]
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      {
        "path": "./routes",
        "options": {
          "secret": "{PLT_SECRET}"
        }
      }
    ],
    "typescript": "{PLT_ENTITY_TYPESCRIPT}"
  },
  "types": {
    "autogenerate": true
  }
}
