{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/2.2.1.json",
  "db": {
    "connectionString": "{PLT_ENTITY_DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "schemalock": true
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": "{PLT_ENTITY_APPLY_MIGRATIONS}"
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      {
        "path": "./routes",
        "encapsulate": true,
        "options": {
          "secret": "{PLT_SECRET}"
        }
      }
    ],
    "typescript": "{PLT_ENTITY_TYPESCRIPT}"
  },
  "types": {
    "autogenerate": true
  }
}
