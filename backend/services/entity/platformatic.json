{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/2.2.1.json",
  "db": {
    "connectionString": "{PLT_ENTITY_DATABASE_URL}",
    "graphql": true,
    "openapi": {
      "info": {
        "title": "Platformatic DB API",
        "version": "1.0.0",
        "description": "This is the API documentation for Platformatic DB."
      },
      "enabled": true,
      "security": [{ "bearerAuth": [] }],
      "components": {
        "securitySchemes": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        }
      }
    },
    "schemalock": true
  },
  "authorization": {
    "adminSecret": "{PLT_SECRET}",
    "roleKey": "role",
    "anonymousRole": "anonymous",
    "jwt": {
      "secret": "{PLT_SECRET}"
    },
    "rules": [
      {
        "role": "admin",
        "delete": true,
        "entity": "user",
        "find": true,
        "save": true
      }
    ]
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": "{PLT_ENTITY_APPLY_MIGRATIONS}"
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      {
        "path": "./routes",
        "encapsulate": false,
        "options": {
          "secret": "{PLT_SECRET}"
        }
      }
    ],
    "typescript": "{PLT_ENTITY_TYPESCRIPT}"
  },
  "types": {
    "autogenerate": true
  }
}
